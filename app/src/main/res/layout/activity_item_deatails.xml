<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".ItemDeatails">

    <TextView
        android:layout_width="match_parent"
        android:text="@string/apple"
        android:id="@+id/itemNameD"
        android:padding="10dp"
        android:textSize="15sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_height="wrap_content"/>
    <ImageView
        android:layout_width="match_parent"
        android:scaleType="fitCenter"
        android:id="@+id/itemImageD"
        android:src="@drawable/grape"
        android:layout_height="400dp"/>
    <TextView
        android:layout_width="match_parent"
        android:id="@+id/itemPriceD"
        android:text="@string/_300"
        android:padding="10dp"
        android:textSize="15sp"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="match_parent"
        android:id="@+id/itemDescrD"
        android:text="@string/item_descption"
        android:padding="10dp"
        android:textSize="15sp"
        android:layout_height="wrap_content"/>




</LinearLayout>